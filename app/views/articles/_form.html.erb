<div class="container">

  <%if @article.errors.any?%>
  <div class="row justify-content-center">
   <div class="col-10">
       <%= render 'errors'%>
       <%end%>
       <%=form_with(model: @article,class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>

       <div class="form-group row">

        <%=f.label 'Title:',class:"col-2 col-form-label text-light"%>
        <div class="col-10">
          <%=f.text_field :title,class:"form-control",placeholder:"Title"%><br>
      </div>
  </div>

  <div class="form-group row">
    <%=f.label 'Description:',class:"col-2 col-form-label text-light"%>
    <div class="col-10">
      <%=f.text_area :description,row:20,class:"form-control",placeholder:"Description"%><br>
  </div>
</div>

<div class="form-group row justify-content-center">
    <%=f.submit class:"btn btn-outline-dark btn-lg"%>

    <%end%>
    <%=link_to'back',articles_path,class:"btn btn-outline-dark mr-5"%>
</div>
</div>
</div>




