<div class="container">

  <%if @user.errors.any?%>
  <div class="row justify-content-center">
   <div class="col-10">
       <%= render 'shared/errors',obj: @user%>
       <%end%>
       <%=form_with(model: @user,class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>

       <div class="form-group row">

        <%=f.label 'User_Name:',class:"col-2 col-form-label text-light"%>
        <div class="col-10">
          <%=f.text_field :user_name,class:"form-control",placeholder:"Enter user name"%><br>
      </div>
  </div>

  <div class="form-group row">
    <%=f.label 'Email:',class:"col-2 col-form-label text-light"%>
    <div class="col-10">
      <%=f.email_field :email,class:"form-control",placeholder:"Email"%><br>
  </div>
</div>

<div class="form-group row">
    <%=f.label 'Password:',class:"col-2 col-form-label text-light"%>
    <div class="col-10">
      <%=f.password_field :password,class:"form-control",placeholder:"Enter Password"%><br>
  </div>
</div>

<div class="form-group row justify-content-center">
    <%=f.submit "SignUp!",class:"btn btn-outline-dark btn-lg"%>

    <%end%>
    <%=link_to'back',articles_path,class:"btn btn-outline-dark mr-5"%>
</div>
</div>
</div>




